\newtheorem{example}[thmcounter]{Example}
\newtheorem{keyidea}[thmcounter]{Key Idea}
\newtheorem{lemma}[thmcounter]{Lemma}
\newtheorem{method}[thmcounter]{Method}
\newtheorem{proposition}[thmcounter]{Proposition}

\theoremstyle{definition}
\newtheorem{axiom}[thmcounter]{Axiom}
\newtheorem{assumption}[thmcounter]{Assumption}
\newtheorem{definition}[thmcounter]{Definition}
\newtheorem{model}[thmcounter]{Model}

\theoremstyle{remark}
\newtheorem{claim}[thmcounter]{Claim}
\newtheorem{conjecture}[thmcounter]{Conjecture}
\newtheorem{exercise}[thmcounter]{Exercise}
\newtheorem{idea}[thmcounter]{Idea}
\newtheorem{fact}[thmcounter]{Fact}
\newtheorem{problem}[thmcounter]{Problem}
