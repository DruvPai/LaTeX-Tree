\ProvidesPackage{druv-thm}

%%%%% ASSUMPTION: NOT USING BEAMER

%%%%% PACKAGE ARGUMENTS
%%% TOGGLES
\newtoggle{druvlargedoc} \togglefalse{druvlargedoc}
%%% OPTIONS
\DeclareOption{largedoc}{\toggletrue{druvlargedoc}}
\ProcessOptions

\RequirePackage{amsthm} % http://www.ams.org/arc/tex/amscls/amsthdoc.pdf
\RequirePackage{thmtools} % https://ctan.mirrors.hoobly.com/macros/latex/contrib/thmtools/doc/thmtools-manual.pdf

\RequirePackage[capitalize, nameinlink]{cleveref} % http://tug.ctan.org/tex-archive/macros/latex/contrib/cleveref/cleveref.pdf

\newcounter{thmcounter}
\newcounter{probcounter}

\theoremstyle{plain}
\newtheorem{theorem}[thmcounter]{Theorem}
\newtheorem{corollary}[thmcounter]{Corollary}
\newtheorem{keyidea}[thmcounter]{Key Idea}
\newtheorem{lemma}[thmcounter]{Lemma}
\newtheorem{method}[thmcounter]{Method}
\newtheorem{proposition}[thmcounter]{Proposition}

\theoremstyle{definition}
\newtheorem{axiom}[thmcounter]{Axiom}
\newtheorem{assumption}[thmcounter]{Assumption}
\newtheorem{definition}[thmcounter]{Definition}
\newtheorem{model}[thmcounter]{Model}
\newtheorem{notation}[thmcounter]{Notation}

\theoremstyle{remark}
\newtheorem{example}[thmcounter]{Example}
\newtheorem{claim}[thmcounter]{Claim}
\newtheorem{conjecture}[thmcounter]{Conjecture}
\newtheorem{exercise}[thmcounter]{Exercise}
\newtheorem{idea}[thmcounter]{Idea}
\newtheorem{fact}[thmcounter]{Fact}
\newtheorem{problem}[thmcounter]{Problem}
\newtheorem{question}[thmcounter]{Question}
\newtheorem{remark}[thmcounter]{Remark}

%% HOMEWORK
\theoremstyle{definition}
\newtheorem{hwproblem}[probcounter]{Problem}

%% PROOFS
% Smallcaps proof
\newenvironment{solution}{\begin{proof}[Solution]}{\end{proof}}

%%%%% EQUATION NUMBERING
%%% TO GET EQUATION NUMBERING TO MATCH STYLE OF THEOREM
\RequirePackage{chngcntr}
\counterwithout{equation}{section}
\ifdef{\chapter}{
    \counterwithout{equation}{chapter}
}{}
\crefname{equation}{}{}
\Crefname{equation}{}{}


%%%%% ALGORITHM NUMBERING
%%% MAKE ALGORITHM USE SAME NUMBERING AS ANYTHING ELSE
\AtBeginEnvironment{algorithm}{
    \renewcommand{\c@algorithm}{\value{thmcounter}}
}
