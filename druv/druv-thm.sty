\ProvidesPackage{druv-thm}

%%%%% ASSUMPTION: NOT USING BEAMER

%%%%% PACKAGE ARGUMENTS
%%% TOGGLES
\newtoggle{druvlargedoc} \togglefalse{druvlargedoc}
%%% OPTIONS
\DeclareOption{largedoc}{\toggletrue{druvlargedoc}}
\ProcessOptions

\RequirePackage{amsthm} % http://www.ams.org/arc/tex/amscls/amsthdoc.pdf
\RequirePackage{thmtools} % https://ctan.mirrors.hoobly.com/macros/latex/contrib/thmtools/doc/thmtools-manual.pdf

\RequirePackage[capitalize, nameinlink]{cleveref} % http://tug.ctan.org/tex-archive/macros/latex/contrib/cleveref/cleveref.pdf

%%%%% THEOREM STYLES
%%% THEOREM STYLE
\declaretheoremstyle[
  spaceabove=\baselineskip,
  spacebelow=\baselineskip,
  headfont=\normalfont\bfseries,
  notefont=\normalfont\bfseries,
  bodyfont=\normalfont\itshape,
  headpunct={.\newline}
]{theoremstyle}
%%% DEFINITION STYLE
\declaretheoremstyle[
  spaceabove=\baselineskip,
  spacebelow=\baselineskip,
  headfont=\normalfont\bfseries,
  notefont=\normalfont\bfseries,
  bodyfont=\normalfont,
]{definitionstyle}
%%% REMARK STYLE
\declaretheoremstyle[
  headfont=\normalfont\itshape,
  notefont=\normalfont\itshape,
  bodyfont=\normalfont,
]{remarkstyle}

%%%%% THEOREM DECLARATIONS
\declaretheorem[style=theoremstyle, parent=section]{theorem}
\declaretheorem[style=theoremstyle, sibling=theorem]{
  lemma,
  corollary,
  proposition,
  conjecture,
  criterion,
  assertion
}
\declaretheorem[style=theoremstyle, numbered=no]{
  theorem*,
  lemma*,
  corollary*,
  proposition*,
  conjecture*,
  criterion*,
  assertion*
}

%%%%% DEFINITION STYLE ENVIRONMENTS
%%% ENVIRONMENTS
\declaretheorem[style=definitionstyle, sibling=theorem]{
  definition,
  condition,
  problem,
  example,
  exercise,
  algorithm,
  question,
  axiom,
  property,
  assumption,
  hypothesis
}
\declaretheorem[style=definitionstyle, numbered=no]{
  definition*,
  condition*,
  problem*,
  example*,
  exercise*,
  algorithm*,
  question*,
  axiom*,
  property*,
  assumption*,
  hypothesis*
}

%%%%%% REMARK STYLE ENVIRONMENTS
%%% ENVIRONMENTS
\declaretheorem[style=remarkstyle, sibling=theorem]{
  remark,
  note,
  fact,
  notation,
  claim,
  summary,
  acknowledgement,
  case,
  conclusion
}
\declaretheorem[style=remarkstyle, numbered=no]{
  remark*,
  note*,
  fact*,
  notation*,
  claim*,
  summary*,
  acknowledgement*,
  case*,
  conclusion*
}

%%%%% CHEAT SHEET STYLE ENVIRONMENTS
\declaretheorem[style=remarkstyle, title=Theorem, numbered=no]{compacttheorem}
\declaretheorem[style=remarkstyle, title=Lemma, numbered=no]{compactlemma}
\declaretheorem[style=remarkstyle, title=Corollary, numbered=no]{compactcorollary}
\declaretheorem[style=remarkstyle, title=Proposition, numbered=no]{compactproposition}
\declaretheorem[style=remarkstyle, title=Notation, numbered=no]{compactnotation}


%%%%% PSET STYLE ENVIRONMENTS
%%% ENVIRONMENTS
\declaretheorem[style=definitionstyle, title=Problem]{psetproblem}
\declaretheorem[style=theoremstyle, title=Theorem, parent=psetproblem]{psettheorem}
\declaretheorem[style=theoremstyle, title=Lemma, parent=psetproblem]{psetlemma}
\declaretheorem[style=remarkstyle, title=Claim, parent=psetproblem]{psetclaim}
\declaretheorem[style=remarkstyle, title=Case, parent=psetproblem]{psetcase}

%%%%% PROOF ENVIRONMENTS
%%% ENViRONMENTS
\newenvironment{solution}{\begin{proof}[Solution]}{\end{proof}}

%%%%% EQUATION NUMBERING
%%% TO GET EQUATION NUMBERING TO MATCH STYLE OF THEOREM
\numberwithin{equation}{section}
